@page
@model ForgotPasswordModel
@{
  Layout = null;
  ViewData["Title"] = "Entrar";
}
<!DOCTYPE html>
<html>
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>@ViewData["Title"] - Site</title>
  @await Html.PartialAsync("Partials/_LoginStylesPartial")
</head>
<body>

  <div class="login-page">
    <div class="form">
      <form class="login-form" method="POST">
        <div class="form-group">
          <input type="text" asp-for="Input.Email" />
          <span asp-validation-for="Input.Email" class="text-danger"></span>
        </div>
        <button type="submit">Recuperar senha</button>
        <p class="message"><a asp-page="/Account/Login">Voltar</a></p>
      </form>
    </div>
  </div>

  @await Html.PartialAsync("Partials/_ScriptsPartial")
  @await Html.PartialAsync("Partials/_ValidationScriptsPartial")
</body>
</html>
