@page
@model Site.Pages.Administrador.Usuario.AdicionarUsuarioModel
@{
  ViewData["Title"] = "Adicionar usuario";
}

<form method="POST">
  <div class="form-group">
    <label asp-for="Input.Nome"></label>
    <input class="form-control" asp-for="Input.Nome">
    <span asp-validation-for="Input.Nome" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Input.Sobrenome"></label>
    <input class="form-control" asp-for="Input.Sobrenome">
    <span asp-validation-for="Input.Sobrenome" class="text-danger"></span>
  </div>
  <div class="form-group">
    <label asp-for="Input.Email"></label>
    <input class="form-control" asp-for="Input.Email">
    <span asp-validation-for="Input.Email" class="text-danger"></span>
  </div>
  <p>
    Informe o horário de acesso permitido a este sistema:
  </p>
  <div class="row">
    <div class="col">
      <div class="form-group">
        <label asp-for="Input.HorarioEntrada"></label>
        <input class="form-control" asp-for="Input.HorarioEntrada">
        <span asp-validation-for="Input.HorarioEntrada" class="text-danger"></span>
      </div>
    </div>
    <div class="col">
      <div class="form-group">
        <label asp-for="Input.HorarioSaida"></label>
        <input class="form-control" asp-for="Input.HorarioSaida">
        <span asp-validation-for="Input.HorarioSaida" class="text-danger"></span>
      </div>
    </div>
  </div>
  <button type="submit">Cadastrar</button>
</form>