@page
@model Site.Pages.Admin.GrupoEconomicoModel
@{
  ViewData["Title"] = "Grupo Econômico";
}

@section SubMenu {
  @await Html.PartialAsync("Partials/_MenuAdminPartial")
}

@section JumbotronBody {
  <p class="lead collapse" id="collapseJumbotron">
    Quando duas ou mais empresas estão sob a direção, o controle ou a administração de outra, compondo grupo industrial, comercial ou de qualquer outra atividade econômica, ainda que cada uma delas tenha personalidade jurídica própria.
  </p>
  <hr class="my-4">
  <p class="lead">
    <a class="btn btn-primary btn-lg" role="button" asp-page="/Admin/GrupoEconomico/Adicionar">Adicionar Grupo Econômico</a>
  </p>
}

<form>
  <table class="table table-striped">
    <thead>
      <tr>
        <th scope="col" class="text-center">#</th>
        <th scope="col">Nome</th>
        <th scope="col">Nome Fantasia</th>
        <th scope="col">UF</th>
        <th scope="col">Situação</th>
        <th scope="col"></th>
      </tr>
    </thead>
    <tbody>
      @for (int i = 0; i < Model.GruposEconomicos.Count; i++)
      {
        <tr>
          <th scope="row" class="text-center">@(i + 1)</th>
          <td>@Model.GruposEconomicos[i].Nome</td>
          <td>@Model.GruposEconomicos[i].NomeFantasia</td>
          <td>@Model.GruposEconomicos[i].UF</td>
          <td class="text-center">@Model.GruposEconomicos[i].Situacao</td>
          <td class="text-center">
              Edit
          </td>
        </tr>
      }
    </tbody>
  </table>
</form>